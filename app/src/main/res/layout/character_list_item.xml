<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/characterImageView"
            android:layout_width="150dp"
            android:layout_height="118dp"
            android:layout_marginStart="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/frodo_ring"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:layout_width="255dp"
            android:layout_height="119dp"
            android:background="#ffffff"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/characterImageView"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/charNameTextView"
                android:layout_width="254dp"
                android:layout_height="38dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Character Name"
                android:textColor="@color/brownBrewsdog"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/raceTextView"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_below="@+id/charNameTextView"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:fontFamily="@font/smartwatch"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Race Type"
                android:textSize="18sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/wikiTextView"
                android:layout_width="256dp"
                android:layout_height="33dp"
                android:layout_below="@+id/charNameTextView"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center"
                android:fontFamily="@font/droid_sans"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Wiki Url"
                android:textSize="14sp"
                android:textStyle="italic" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>